<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style.input-validation-error { border-color: red; background-color: #fee ; } />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body class="m-1 p-1">
    <div class="bg-info p-2 row">
        <div class="col">
           <a class="btn btn-sm btn-primary" asp-action="ListCategories" asp-controller="Admin">КАТЕГОРИИ</a>
           <a class="btn btn-sm btn-primary" asp-action="Index" asp-controller="Admin">ТОВАР</a>
           <a class="btn btn-sm btn-primary" asp-action="ListRequest" asp-controller="Admin">ЗАПРОСЫ</a>
           <a class="btn btn-sm btn-primary" asp-action="ListProductRequest" asp-controller="Admin">ВОПРОСЫ ПО ТОВАРАМ</a>
        </div>
        <div class="col">
            <h4>@ViewBag.Title</h4>
        </div>
        <div class="col-2">
            <a class="btn btn-sm btn-primary" asp-action="Logout" asp-controller="Account">ВЫХОД</a>
        </div>
    </div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    @RenderBody()
</body>
</html>
