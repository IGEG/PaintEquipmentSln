@model Product
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Редактирование товара";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <div><span asp-validation-for= "Name " class= "text-danger"/></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <div><span asp-validation-for= "Description " class= "text-danger"/></div>
<textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category">Категория товара</label>
        <div><span asp-validation-for="Category" class= "text-danger"/></div>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <div><span asp-validation-for="Price" class= "text-danger"/></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button> <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>