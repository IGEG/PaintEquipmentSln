@model ProductListViewModel
@{
    Layout = "_MainLayout";
}
<div class="parts">
    <div class="container">
        <h2>Оборудование</h2>
        <div class="bike-parts-sec">
            <div class="bike-parts acces">
                <div class="top">
                    <ul>
                        <li><a asp-controller="Main" asp-action="index">Главная страница</a></li>
                        <li><a asp-controller="Main" asp-action="index"> / </a></li>
                        <li><a asp-controller="Category" asp-action="index">Категории</a></li>
                    </ul>
                </div>
                <div class="bike-apparels">
                    @foreach (var p in Model.Products)
                    {
                        <partial name="ProductCard" model="p" />
                    }
                </div>
            </div>
            <div class="rsidebar span_1_of_left">
                <section class="sky-form">
                    <div class="product_right">
                        <h3 class="m_2">КАТЕГОРИИ</h3>
                        <vc:navigation-menu />
                    </div>
                </section>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div align="center">
<div page-model="@Model.PageInfo" page-action="Index"
page-classes-enabled="true"
page-class="btn" page-class-normal="btn btn-outline-dark"
page-class-selected="btn btn-outline-secondary"
page-url-category="@Model.CurrentCategory"
class="btn-group pull-right m-1">
</div>
</div>
