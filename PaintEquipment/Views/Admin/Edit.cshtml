@model Product
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Редактирование товара";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <div><span asp-validation-for="Name " class="text-danger" /></div>
        <input data-val="true" data-val-required="Введите Имя" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SmallDescription">Описание</label>
        <div><span asp-validation-for="SmallDescription " class="text-danger" /></div>
<textarea data-val="true" data-val-required="Укажите описание товара" asp-for="SmallDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category">Категория товара</label>
        <div><span asp-validation-for="Category" class="text-danger" />
        <select class="form-control" asp-for="Category">
            @if (Model.Id == 0)
            {
                <option disabled selected>Выберете категорию</option>
            }
            @foreach(Category cat in ViewBag.Categories)
            {
                <option selected=@(Model.CategoryId==cat.Id) value="@cat.Id">@cat.Name</option>

            }
        </select>
        </div>
    </div>
    @*<div class="form-group">
        <label asp-for="Price">Цена</label>
        <div><span asp-validation-for="Price" class="text-danger" /></div>
        <input data-val="true" data-val-required="Укажите стоимость товара" asp-for="Price" class="form-control" />
    </div>*@
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button> <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>