@model Product
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Редактирование товара";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <div><span asp-validation-for="Name " class="text-danger" /></div>
        <input data-val="true" data-val-required="Введите Имя" asp-for="Name" class="form-control" />
    </div>
        <div class="form-group">
