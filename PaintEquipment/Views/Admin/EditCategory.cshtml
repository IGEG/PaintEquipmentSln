@model Category
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Редактирование категории товара";
}

<form asp-action="EditCategory" method="post">
    <input  type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <div><span asp-validation-for= "Name" class= "text-danger"/></div>
        <input data-val="true" data-val-required="Укажите категорию товара" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Desc">Описание категории</label>
        <div><span asp-validation-for= "Desc" class= "text-danger"/></div>
<textarea data-val="true" data-val-required="Укажите описание категории товара" asp-for="Desc" class="form-control"></textarea>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button> <a asp-action="ListCategories" class="btn btn-secondary">Отмена</a>
    </div>
</form>