@model Product

 <div class="card card-outline-primary m-1 p-1 h-75" style="width: 18rem;">
   <div class="bg-faded p-1">
       <div width="200" height="200">
     <img  src="@Model.Img" class="card-img-top" alt="@Model.Name">
    </div>
     <h2>@Model.Name</h2>
     <span class="badge rounded-pill bg-primary" style="float:right">
         @*<small>@Model.Price.ToString("c")</small>*@
         <small>0</small>
     </span>
     </div>
    
     <form id="@Model.Id" asp-action="AddToCart" asp-controller="CartAll" method="post">
     <input type="hidden" asp-for="Id"/>
     <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
     <span class="card-text p-1">
         @Model.Description
     </span>
      <div class="card-footer">
         <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
             Добавить в корзину
         </button>
     </div>
     </form>
   
</div>
