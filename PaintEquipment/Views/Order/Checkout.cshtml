@model Order

<h2>Оформление заказа</h2>
<p>Заполниете форму ниже для отправки заказа!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Название компании</h3>
    <div class="form-group">
        <label>Name:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Адрес</h3>
    <div class="form-group">
        <label>Адрес 1:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Адрес 2:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Адрес 3:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Область:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Дополнительно:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>Опции</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Требуется дополнительная упаковка
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Отправить заказ" />
    </div>
</form>

