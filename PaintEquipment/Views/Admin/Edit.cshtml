    </div>
        <div class="form-group">
        <label asp-for="MaxWeight">Вес оборудования кг.</label>
<input asp-for="MaxWeight" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Kit">Укажите комплектацию оборудвания</label>
<input asp-for="Kit" class="form-control"/>
